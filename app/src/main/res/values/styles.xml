<resources>

    <!-- Tema utilizado apenas na tela de splash -->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Tema utilizado no restante da aplicação -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- - - - - - - - - -
     - Estilos de texto  -
     - - - - - - - - - - -->

    <!-- Estilo utilizado no texto da Toolbar -->
    <style name="TextAppearance.Toolbar" parent="android:TextAppearance">
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Estilo utilizado no texto da Toolbar, apenas na WebViewActivity -->
    <style name="TextAppearance.WebView.Toolbar" parent="TextAppearance.Toolbar">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Estilo utilizado no texto do campo "chapeu" da notícia -->
    <style name="TextAppearance.Chapeu" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextChapeu</item>
        <item name="android:textSize">17sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Estilo utilizado no título da notícia -->
    <style name="TextAppearance.Title" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">22sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Estilo utilizado no sumário da notícia -->
    <style name="TextAppearance.Summary" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextSummary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Estilo utilizado na data da notícia -->
    <style name="TextAppearance.Timestamp" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextTimestamp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Estilo utilizado para exibir o erro (caso haja) no final do feed -->
    <style name="TextAppearance.Error" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextError</item>
        <item name="android:textSize">17sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Estilo utilizado no texto, no final do feed, caso haja algum erro -->
    <style name="TextAppearance.Retry" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextRetry</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Estilo utilizado nas informações do app, na SettingsActivity -->
    <style name="TextAppearance.About" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextAbout</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
