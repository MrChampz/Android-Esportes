    <string name="tx_about_copyright">\u00A9 2019 UpCO Ltd.</string>
    <string name="cd_about_logo">Logo do app</string>

    <!-- Strings usadas como actions (menu) -->
    <string name="action_settings">Configurações</string>
    <string name="action_about">Sobre</string>

    <!--
        Strings usadas para a exibição de timestamp
    -->

    <string name="tx_timestamp_year">
